.KAcPS .Scale 
	margin 0 auto
	display table
	min-width 50%

	input[type="radio"]
		display none

	input[type="radio"]+label .glyphicon
		display none

	input[type="radio"]checked+label .glyphicon
		display inline

	.Item
		display table-cell
		height 50px
		padding 5px
		text-align center

		> div > button
			display block
			margin 0 auto

		> label
			margin-top 10px
			min-width 50px
			vertical-align bottom

		> .Filler
			visibility hidden

		> .Stimulus~label
			margin-top 10px