@require "flex"

.audioInformationRetrieval
	DisplayFlex()
	FlexColumn()
	.search
		table
			tbody
				tr
					td:last-child
						text-align right
	.playerControls
		margin 10px 0
		.time
			margin 0 10px
		.volume
			display: inline-block
			vertical-align middle
			width 150px

	.segmentList
		margin-top 20px
	.Scale
		margin 0 auto
		display table
		min-width 50%

		> label
			position relative
			display table-cell

			> input
				position relative
				display inline-block
				margin-left auto
				margin-right auto

			> span:last-child
				width 100%
				display inline-block

		.Line
			position absolute
			top 10px
			left 0
			height 1px
			width 100%
			border-top 1px solid grey

		label:first-child .Line
			left 50%
			width 50%

		label:last-child .Line
			width 50%
			display inline-block