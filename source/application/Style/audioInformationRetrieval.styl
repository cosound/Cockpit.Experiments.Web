@require "flex"

.audioInformationRetrieval
	DisplayFlex()
	FlexColumn()
	.search
		table
			tbody
				tr
					td:last-child
						text-align right
	.playerControls
		margin 10px 0
		.time
			margin 0 10px
		.volume
			display: inline-block
			vertical-align middle
			width 150px

	.segmentList
		margin-top 20px
		table
			border-collapse collapse
			tr:nth-child(odd)
				background-color #eeeeee
			td
				padding 5px
				border 1px solid #999999