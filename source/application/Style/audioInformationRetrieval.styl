@require "flex"

borderColor = black
trackHeight = 100px
timeTrackHeight = 40px
segmentHeight = 40px

.audioInformationRetrieval
	DisplayFlex()
	FlexColumn()
	.timeLineContainer
		DisplayFlex()
		FlexColumn()
		.timeLine
			DisplayFlex()
			FlexStretchChildren()
			border 1px solid borderColor
			.headers
				FlexStatic()
				DisplayFlex()
				FlexColumn()
				FlexStretchChildren()
				width 200px
				border-right  1px solid borderColor
				.header
					height trackHeight
					border-bottom  1px solid borderColor
			.tracks
				FlexStretch()
				DisplayFlex()
				FlexColumn()
				FlexStretchChildren()
				position relative
				overflow-x auto
				overflow-y hidden
				.track
					position relative
					height trackHeight
					padding 3px 0
					border-bottom  1px solid borderColor
					.segment
						position absolute
						height segmentHeight
						overflow hidden
						padding 3px
						border-radius 3px
						border 1px solid borderColor
				.timeTrack
					position relative
					height timeTrackHeight
					border-bottom  1px solid borderColor
					.segment
						position absolute
				.currentPosition
					position absolute
					top 0
					height 100%
					width 1px
					background-color blue