@require "flex"

borderColor = black
trackHeight = 100px
segmentHeight = 40px

.audioInformationRetrieval
	DisplayFlex()
	FlexColumn()
	.timeLineContainer
		DisplayFlex()
		FlexColumn()
		.timeLine
			DisplayFlex()
			FlexStretchChildren()
			border 1px solid borderColor
			height 400px
			.headers
				FlexStatic()
				DisplayFlex()
				FlexColumn()
				FlexStretchChildren()
				width 200px
				border-right  1px solid borderColor
				.header
					height trackHeight
					border-bottom  1px solid borderColor
			.tracks
				FlexStretch()
				DisplayFlex()
				FlexColumn()
				FlexStretchChildren()
				overflow-x auto
				overflow-y hidden
				.track
					height trackHeight
					border-bottom  1px solid borderColor
					position relative
					.segment
						position absolute
						padding 3px
						border-radius 5px
						border 1px solid borderColor
						overflow hidden
						height segmentHeight